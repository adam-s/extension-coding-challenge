{
  "manifest_version": 3,
  "background": { "service_worker": "serviceworker.ts" },
  "content_scripts": [
    {
      "js": ["content/index.ts"],
      "matches": ["https://*/*"]
    },
    {
      "js": ["content/hacker-news/index.ts"],
      "matches": ["https://news.ycombinator.com/*"]
    },
    {
      "js": ["content/nasa/index.ts"],
      "matches": ["https://*.nasa.gov/*"]
    }
  ],
  "permissions": ["scripting", "tabs"],
  "host_permissions": [
    "https://*/*/"
  ]
}